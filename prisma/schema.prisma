generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
  
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


enum Role {
  USER
  ORGANIZER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}
